{
  "info": {
    "_postman_id": "gym-saas-collection-2026",
    "name": "Gym SaaS API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (obtener token)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@gym.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Obtener clientes",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:4000/api/clients",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "clients"]
        }
      }
    },
    {
      "name": "Crear cliente",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Cliente Prueba\",\n  \"email\": \"cliente@prueba.com\",\n  \"phone\": \"555-1234\",\n  \"membershipType\": \"basico\",\n  \"startDate\": \"2026-01-20\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/clients",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "clients"]
        }
      }
    },
    {
      "name": "Editar cliente",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Cliente Editado\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/clients/{{clientId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "clients", "{{clientId}}"]
        }
      }
    },
    {
      "name": "Eliminar cliente",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:4000/api/clients/{{clientId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "clients", "{{clientId}}"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "clientId", "value": "" }
  ]
}
